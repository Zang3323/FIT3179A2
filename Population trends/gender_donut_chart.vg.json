{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Zang3323/FIT3179A2/main/OCED_population_gender.csv",
    "format": {"type": "csv"}
  },
  "width": "container",
  "config": {
    "background": "rgb(230, 211, 176)",
    "view": {"stroke": "rgb(230, 211, 176)"}
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2003,
      "bind": {
        "input": "range",
        "min": 2003,
        "max": 2012,
        "step": 1,
        "name": "Year:"
      }
    },
    {
      "name": "Country_selection",
      "value": "Australia",
      "bind": {
        "input": "select",
        "options": [
          "Australia",
          "Austria",
          "Belgium",
          "Canada",
          "Czech Republic",
          "Denmark",
          "Finland",
          "France",
          "Germany",
          "Greece",
          "Hungary",
          "Iceland",
          "Ireland",
          "Italy",
          "Japan",
          "Korea",
          "Luxembourg",
          "Mexico",
          "Netherlands",
          "New Zealand",
          "Norway",
          "Poland",
          "Portugal",
          "Slovak Republic",
          "Spain",
          "Sweden",
          "Switzerland",
          "Türkiye",
          "United Kingdom",
          "United States"
        ],
        "labels": [
          "Australia",
          "Austria",
          "Belgium",
          "Canada",
          "Czech Republic",
          "Denmark",
          "Finland",
          "France",
          "Germany",
          "Greece",
          "Hungary",
          "Iceland",
          "Ireland",
          "Italy",
          "Japan",
          "Korea",
          "Luxembourg",
          "Mexico",
          "Netherlands",
          "New Zealand",
          "Norway",
          "Poland",
          "Portugal",
          "Slovak Republic",
          "Spain",
          "Sweden",
          "Switzerland",
          "Türkiye",
          "United Kingdom",
          "United States"
        ],
        "name": "Country: "
      }
    }
  ],
  "transform": [
    {
      "calculate": "datum.Gender == 'Males' ? 'Male' : 'Female'",
      "as": "Gender"
    },
    { "calculate": "datum.Value", "as": "Population" },
    {
      "filter": "datum.Country == Country_selection || Country_selection == null"
    },
    {
      "filter": "datum.Year == Year_selection || (Year_selection == null && datum.Year == 2002)"
    },
    {
      "aggregate": [
        { "op": "sum", "field": "Population", "as": "TotalPopulation" }
      ],
      "groupby": ["Country", "Year", "Gender"]
    },
    {
      "calculate": "datum.Country == null ? 'Center Text' : datum.Country",
      "as": "Text"
    }
  ],
  "layer": [
    {
      "mark": { "type": "arc", "innerRadius": 50 },
      "encoding": {
        "theta": {
          "field": "TotalPopulation",
          "type": "quantitative",
          "stack": "normalize"
        },
        "color": {
          "field": "Gender",
          "type": "nominal",
          "scale": { "range": ["pink", "#6495ED"] },
          "legend": { "orient": "bottom" }
        },
        "tooltip": [
          { "field": "Country", "type": "nominal", "title": "Country" },
          { "field": "Gender", "type": "nominal", "title": "Gender" },
          {
            "field": "TotalPopulation",
            "type": "quantitative",
            "title": "Population",
            "format": ",.0f"
          }
        ]
      }
    },
    {
      "mark": { "type": "text", "align": "center", "baseline": "middle", "dx": 0, "dy": 0 },
      "encoding": {
        "text": { "field": "Text" }
      }
    }
  ]
}